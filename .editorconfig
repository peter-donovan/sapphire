; EditorConfig
root = true

; Default settings
[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = tab
insert_final_newline = true
max_line_length = off
tab_width = 4
trim_trailing_whitespace = true

; JSON and YAML configuration files
[{*.json, .*rc, *.yml, *.yaml}]
indent_size = 2
indent_style = space
tab_width = 2

; Markdown files
[*.md]
trim_trailing_whitespace = false

