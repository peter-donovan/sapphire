{
  "name": "sapphire",
  "version": "0.1.0",
  "description": "Chat application built with Node.js, React.js and WebSockets.",
  "main": "index.js",
  "author": "Peter Donovan <pjd720@yahoo.com>",
  "license": "MIT",
  "engines": {
    "node": ">=14.15.4",
    "npm": ">=7.0.0",
    "yarn": ">=1.21.0"
  },
  "scripts": {
    "client:build": "yarn --cwd client/ build",
    "client:start": "yarn --cwd client/ start",
    "server:build": "yarn --cwd server/ build",
    "server:dev": "yarn --cwd server/ dev",
    "server:start": "yarn --cwd server/ start",
    "dev": "concurrently 'yarn server:dev' 'wait-on tcp:3400 && yarn client:start'"
  },
  "devDependencies": {
    "concurrently": "^6.0.0",
    "husky": "^5.0.9",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "wait-on": "^5.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,json,scss}": "prettier --write"
  }
}
