{
  "arrowParens": "always",
  "bracketSpacing": true,
  "endOfLine": "lf",
  "printWidth": 120,
  "semi": true,
  "singleQuote": true,
  "tabWidth": 4,
  "trailingComma": "es5",
  "useTabs": true,
  "overrides": [
	{
	  "files": ["*.json", ".*rc"],
	  "options": {
		"tabWidth": 2,
		"useTabs": false
	  }
	}
  ]
}
