{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2017",

    "outDir": "./dist",

    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "noImplicitAny": true,
    "moduleResolution": "Node",
    "removeComments": true,
    "sourceMap": true,

    "baseUrl": "src",
    "paths": {
      "@sapphire/*": ["./*"]
    }
  }
}
